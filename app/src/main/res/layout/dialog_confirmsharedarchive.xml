<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:background="@drawable/background">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/astronaura"/>

    <TextView
        android:id="@+id/confirm_archive_tv"
        android:text="Do you want to accept marcoaurelio as a friend?"
        android:textSize="15sp"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="-15dp"/>

    <TextView
        android:text="Are you sure?"
        android:textSize="20sp"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="-60dp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/confirm_archive_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_gravity="center"
            android:layout_marginEnd="95dp"
            android:layout_marginRight="95dp"
            android:background="@drawable/buttonstyle"
            android:text="No"
            android:textColor="@color/black" />

        <Button
            android:id="@+id/confirm_archive_yes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_gravity="center"
            android:layout_marginEnd="18dp"
            android:layout_marginRight="18dp"
            android:layout_toLeftOf="@+id/confirm_archive_no"
            android:layout_toStartOf="@+id/confirm_archive_no"
            android:background="@drawable/buttonstyle"
            android:text="Yes"
            android:textColor="@color/black" />

    </RelativeLayout>


</LinearLayout>